{
    "name": "halo-api/halo-api",
    "description": "A simple Object Oriented PHP API client for the halo api.",
    "type": "library",
    "license": "MIT",
    "keywords": ["halo", "api"],
    "authors": [
        {
            "name": "Jeroen Thora",
            "email": "jeroenthora@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "php-http/httplug": "^1.1",
        "php-http/discovery": "^1.2",
        "php-http/client-common": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "php-http/guzzle6-adapter": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "HaloApi\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HaloApi\\Tests\\": "tests/"
        }
    }
}
